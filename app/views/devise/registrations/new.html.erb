<div class="box">
  <div class="container">
    <div class="row">

    <h2>Sign up</h2>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="input-group profile-contents">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-user" aria-hidden="true"></i>
            <%= f.label :name %>
          </span>
          <%= f.text_field :name, autofocus: true, maxlength: "12", class: 'form-control', placeholder: "ニックネームを入力" %>
        </div>
        <em>(12 characters maximum)</em>
              
        <div class="form-group profile-contents">
          <span class="control-label"><%= f.label :usertype_id, "タイプ", class: 'label label-default'%></span>
          <%= f.collection_select :usertype_id, Usertype.all, :id, :name, class: 'form-control input-lg'%>
        </div>
        
        <div class="form-group profile-contents">
          <span class="control-label"><%= f.label :avatar, "アイコン", class: 'label label-default'%></span>
          <%= f.file_field :avatar %>
        </div>
        
        <div class="input-group profile-contents">
          <span class="input-group-addon">
            <i calss="glyphicon glyphicon-envelope" aria-hidden="true"></i>
            <%= f.label :email ,"e-mail"%>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',placeholder: "example@example.com" %>
        </div>

        <div class="input-group profile-contents">
          <span class="input-group-addon"><%= f.label :password %></span>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />

        <div class="input-group profile-contents">
          <span class="input-group-addon"><%= f.label :password_confirmation %></span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions profile-contents">
          <%= f.submit "Sign up" ,class: 'btn btn-primary btn-lg btn-block' %>
        </div>

        <% end %>
        <div class="profile-contents">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>