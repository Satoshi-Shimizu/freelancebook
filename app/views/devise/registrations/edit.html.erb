<div class="box">
  <div class="container">
    <div class="row">
      <div class="page-title__wrap">
        <div class="page-title__wrap__text">
          <h1>Edit <%= resource_name.to_s.humanize %></h1>
        </div>
      </div>
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="input-group profile-contents">
            <span class="input-group-addon"><%= f.label :email %></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group profile-contents">
            <%= f.label :Image , class: 'label label-default' %>
            <%= f.file_field :avatar %>
          </div>

          <div class="form-group profile-contents">
            <span class="control-label"><%= f.label :usertype_id, "タイプ", class: 'label label-default'%></span>
            <%= f.collection_select :usertype_id, Usertype.all, :id, :name, class: 'form-control input-lg'%>
          </div>
            
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="input-group profile-contents">
            <span class="input-group-addon"><%= f.label :password %></span>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "変更する場合のみ入力" %>
          </div>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>

          <div class="input-group profile-contents">
            <span class="input-group-addon"><%= f.label :password_confirmation %></span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "変更する場合のみ入力" %>
          </div>

          <div class="input-group profile-contents">
            <span class="input-group-addon"><%= f.label :current_password %></span>
            <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control', placeholder: "現在のパスワードを入力" %>
          </div>

          <div class="actions profile-contents">
            <%= f.submit "Update" ,class: 'btn btn-primary btn-lg btn-block' %>
          </div>
          <% end %>

          <h3>アカウント削除</h3>
          <p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: 'btn btn-warning btn-lg btn-block', method: :delete %></p>

          <%= link_to "Back", "/users/#{current_user.id}" %>
        </div>
      </div>
  </div>
</div>